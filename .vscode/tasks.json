{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "cmake build debug project",
            "command": "C:/Program Files/CMake/bin/cmake.exe",
            "args": [
                "--build",
                ".",
                "--config",
                "Debug"
            ],
            "options": {
                "cwd": "${fileDirname}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "cppbuild",
            "label": "cmake clean build",
            "command": "C:/Program Files/CMake/bin/cmake.exe",
            "args": [
                "--build",
                ".",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/buld"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
        }
    ]
}